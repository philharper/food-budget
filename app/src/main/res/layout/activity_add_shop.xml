<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddShopActivity">
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/location_input"
            app:layout_constraintStart_toEndOf="@+id/location_text" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent" android:entries="@array/locations"/>
    <TextView
            android:layout_height="0dp"
            android:id="@+id/location_text"
            android:layout_width="wrap_content" android:textSize="18sp" android:text="@string/location_text"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/price_text" android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/price_input"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/price_input" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/location_input"
            app:layout_constraintStart_toEndOf="@+id/price_text" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/date_input" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/price_input" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/date_text"
            android:onClick="displayDatePicker"/>
    <TextView
            android:text="@string/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/date_input" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <DatePicker android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone" android:id="@+id/shop_date_picker"
                android:background="@android:color/background_light" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/button"></DatePicker>
    <Button
            android:text="@string/save_shop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="saveShop"/>
</androidx.constraintlayout.widget.ConstraintLayout>